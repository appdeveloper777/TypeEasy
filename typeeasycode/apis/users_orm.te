// ORM Endpoint para Users
// Modelo: User con todos los campos de la tabla users

endpoint {
    [HttpGet("/api/orm/users")]
    GetUsersORM() {
        //  Conectar a MySQL   

        let conn_id = new mysql_connect("host.docker.internal", "root", "", "meri", 3308);
        
        
        // Ejecutar query
        let result = new mysql_query(conn_id, "SELECT * FROM users LIMIT 1");
        
        // Cerrar conexión
        mysql_close(conn_id);
        
        // Retornar resultado como XML
        return json(result);
    }
}
