
// Endpoint MySQL para TypeEasy
// Demuestra integraci칩n con base de datos MySQL

endpoint {
    [HttpGet("/api/mysql/usuarios")]
    GetUsuariosMySQL() {
        // Conexi칩n a MySQL de XAMPP en la m치quina host (Windows)
        // host.docker.internal:3308 - puerto de XAMPP
        string host = "host.docker.internal";
        string user = "root";
        string pass = "";
        string db   = "meri";
        int port = 3308;
        string query = "SELECT * FROM users LIMIT 20";
        string format = "xml";
        
        let conn_id = new mysql_connect(host, user, pass, db, port);        
        // Ejecutar query
        let result = new mysql_query(conn_id, query, format);
        
        // Cerrar conexi칩n
        mysql_close(conn_id);
        
        // Retornar resultado como XML
        return xml(result);
    }
}
